generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  column   Column @relation(fields: [columnId], references: [id])
  columnId String

  @@map("tasks")
}

model Column {
  id        String   @id @default(uuid())
  title     String
  createdAt DateTime @default(now())
  tasks     Task[]
}
